{
  "manifest_version": 3,
  "name": "Unity Asset Store Sales",
  "version": "2.0.0",
  "description": "Notify when sales happen on Unity Asset Store",
  "icons": {
    "256": "icon.png"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "webRequest",
    "activeTab",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "*://publisher.assetstore.unity3d.com/*"
  ],
  "action": {
    "default_title": "",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
    // "scripts": ["background.js"]
  }
}